<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/dshe/RxSockets</PackageProjectUrl>
    <PackageIcon>worm64.png</PackageIcon>
    <PackageTags>reactive-sockets socket sockets reactive reactive-extensions observable observable-socket network rx rxsocket</PackageTags>
    <Description>A minimal reactive socket implementation.</Description>
    <Authors>DavidS</Authors>
    <Version>2.0.8</Version>
    <AssemblyVersion>2.0.8</AssemblyVersion>
    <FileVersion>2.0.8</FileVersion>
    <ApplicationIcon />
    <OutputType>Library</OutputType>
    <StartupObject />
    <PackageIcon>worm64.png</PackageIcon>
    <Platforms>AnyCPU;x64</Platforms>
    <RepositoryUrl>https://github.com/dshe/RxSockets</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
